// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("ADMIN")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model DoctorProfile {
  id                String   @id @default(cuid())
  name              String
  title             String   // e.g., "MD, MBBS, FRCSC"
  specialization    String
  bio               String   @db.Text
  philosophy        String?  @db.Text
  yearsOfExperience Int
  patientsHelped    Int      @default(0)
  email             String
  phone             String
  whatsappNumber    String
  address           String?  @db.Text
  profileImageUrl   String?
  profileVideoUrl   String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("doctor_profile")
}

model Education {
  id          String   @id @default(cuid())
  institution String
  degree      String
  field       String
  startYear   Int
  endYear     Int?
  description String?  @db.Text
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("education")
}

model Experience {
  id          String   @id @default(cuid())
  institution String
  position    String
  location    String?
  startYear   Int
  endYear     Int?
  current     Boolean  @default(false)
  description String?  @db.Text
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("experience")
}

model Certification {
  id           String   @id @default(cuid())
  name         String
  issuingOrg   String
  issueDate    DateTime
  expiryDate   DateTime?
  credentialId String?
  credentialUrl String?
  imageUrl     String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("certifications")
}

model Award {
  id          String   @id @default(cuid())
  title       String
  organization String
  year        Int
  description String?  @db.Text
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("awards")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  icon        String?  // Icon name or URL
  imageUrl    String?
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Article {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  excerpt         String   @db.Text
  content         String   @db.Text
  coverImageUrl   String?
  category        String
  tags            String[] // Array of tags
  published       Boolean  @default(false)
  featured        Boolean  @default(false)
  views           Int      @default(0)
  readTime        Int      // in minutes
  
  // SEO fields
  metaTitle       String?
  metaDescription String?
  ogImageUrl      String?
  
  publishedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("articles")
}

model Media {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  type        String   // "IMAGE" or "VIDEO"
  url         String
  thumbnailUrl String?
  cloudinaryId String?
  category    String?
  tags        String[]
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("media")
}

model Testimonial {
  id          String   @id @default(cuid())
  patientName String
  patientTitle String?  // e.g., "Software Engineer"
  content     String   @db.Text
  rating      Int      @default(5)
  imageUrl    String?
  featured    Boolean  @default(false)
  approved    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("testimonials")
}

model PageSEO {
  id              String   @id @default(cuid())
  pageName        String   @unique // e.g., "home", "about", "services"
  title           String
  description     String   @db.Text
  keywords        String[]
  ogTitle         String?
  ogDescription   String?
  ogImageUrl      String?
  canonicalUrl    String?
  structuredData  Json?    // JSON-LD structured data
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("page_seo")
}

model AIKnowledge {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  source      String   // e.g., "article", "faq", "manual"
  sourceId    String?  // Reference to article ID if applicable
  embedding   Unsupported("vector(768)")?  // Vector embedding for RAG
  category    String?
  tags        String[]
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("ai_knowledge")
}

model Analytics {
  id          String   @id @default(cuid())
  pagePath    String
  pageTitle   String?
  event       String   // e.g., "page_view", "article_view", "contact_click"
  metadata    Json?    // Additional event data
  userAgent   String?
  ipAddress   String?
  createdAt   DateTime @default(now())

  @@index([pagePath])
  @@index([event])
  @@index([createdAt])
  @@map("analytics")
}

model ContactSubmission {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  subject     String?
  message     String   @db.Text
  read        Boolean  @default(false)
  replied     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contact_submissions")
}
